bindsym $mod+f exec --no-startup-id i3-dmenu-desktop --dmenu="dmenu -i -nf '#F8F8F2' -nb '#282A36' -sb '#6272A4' -sf '#F8F8F2' -fn 'monospace-10' -p 'dmenu:'"

